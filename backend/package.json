{
  "name": "@pbcex/backend",
  "version": "1.0.0",
  "description": "PBCEx Backend API Server",
  "main": "dist/server.js",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "test": "jest --runInBand --ci --no-cache --detectOpenHandles=false --forceExit",
    "test:watch": "jest --watch --maxWorkers=50%",
    "test:coverage": "jest --coverage --runInBand --ci --no-cache",
    "test:unit": "jest tests/unit --runInBand --ci --no-cache --detectOpenHandles=false --forceExit",
    "test:integration": "jest tests/integration --runInBand --ci --no-cache --detectOpenHandles=false --forceExit",
    "test:api": "jest tests/integration/api --runInBand --ci --no-cache --detectOpenHandles=false",
    "test:focused": "FOCUSED_TESTS=1 jest --runInBand --ci --no-cache --testPathPattern=\\.(only\\|focused\\)\\.test\\.ts$",
    "test:contract": "if [ \"$RUN_CONTRACT_TESTS\" = \"true\" ]; then npm run validate:openapi && dredd src/openapi/openapi.yaml http://localhost:4001 --config=dredd.yml || echo 'Contract tests completed with warnings'; else echo 'Contract tests skipped (set RUN_CONTRACT_TESTS=true to enable)'; fi",
    "validate:openapi": "ts-node tests/contract/validate-openapi.ts src/openapi/openapi.yaml",
    "test:phase3": "ENABLE_VAULT_REDEMPTION=true FULFILLMENT_STRATEGY=JM jest --testPathPattern=\"(redemption|fulfillment|support)\"",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "loadtest": "k6 run loadtests/k6/trade_order.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "audit": "node scripts/security-audit.js",
    "migrate": "ts-node -r tsconfig-paths/register scripts/run-migrations.ts",
    "migrate:test": "node ./scripts/migrate-test.js",
    "seed": "ts-node -r tsconfig-paths/register scripts/seed-supabase.ts",
    "seed:memory": "ts-node -r tsconfig-paths/register scripts/seed-dev.ts",
    "reset:db": "npm run migrate && npm run seed",
    "dev:backend": "npm run dev",
    "dev:fedex-smoke": "ts-node -r tsconfig-paths/register scripts/dev-fedex-smoke.ts",
    "lint:check": "eslint \"{src,tests}/**/*.ts\" --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test:ci": "BACKEND_TEST_PATTERN=backend/tests/(unit|integration/api)/.*\\.test\\.ts$ jest --ci --coverage --watchAll=false --runInBand --no-cache --detectOpenHandles=false --forceExit --testPathPattern=$BACKEND_TEST_PATTERN",
    "build:check": "npm run type-check && npm run build",
    "unstick": "pkill -f 'node.*jest' 2>/dev/null || true && npx jest --clearCache && npm ci --prefer-offline --no-audit --no-fund",
    "test:admin-dbless": "npm run unstick && TEST_NO_DB=1 npm run test -- tests/integration/api/admin.api.test.ts --verbose --no-coverage",
    "pretest": "pkill -f 'node.*jest' 2>/dev/null || true && npx jest --clearCache"
  },
  "keywords": [
    "pbcex",
    "commodities",
    "trading",
    "api"
  ],
  "author": "PBCEx Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.5.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "fast-csv": "^5.0.5",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.16.3",
    "resend": "^6.0.2",
    "stripe": "^12.18.0",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.14.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.13.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/connect": "^3.4.38",
    "@types/cookiejar": "^2.1.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/graceful-fs": "^4.1.9",
    "@types/http-errors": "^2.0.5",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-reports": "^3.0.4",
    "@types/jest": "^29.5.14",
    "@types/json-schema": "^7.0.15",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/methods": "^1.1.4",
    "@types/mime": "^3.0.4",
    "@types/ms": "^2.1.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.8",
    "@types/normalize-package-data": "^2.4.4",
    "@types/pg": "^8.15.5",
    "@types/qs": "^6.14.0",
    "@types/range-parser": "^1.2.7",
    "@types/semver": "^7.7.0",
    "@types/send": "^0.17.5",
    "@types/serve-static": "^1.15.8",
    "@types/stack-utils": "^2.0.3",
    "@types/strip-bom": "^3.0.0",
    "@types/strip-json-comments": "^0.0.30",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/triple-beam": "^1.3.5",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@types/yamljs": "^0.2.31",
    "@types/yargs": "^17.0.33",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "dredd": "^14.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "openapi-enforcer": "1.23.0",
    "openapi-types": "^12.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  }
}
